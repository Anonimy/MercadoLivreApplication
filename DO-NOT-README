npm init -y
npm install --save mercadolibre express ejs dotenv multer
touch app.js
mkdir bin && touch bin/www
-- set `app = express()` in app.js and export it
-- set full content in www
-- set script 'start' in package.json
mkdir public && mkdir public/pictures && mkdir public/css && mkdir views && touch views/index.ejs
-- set initial/basic HTML content in index.ejs
-- set content (except routers / only index) in app.js
npm start
-- ********* ngrok http 3000 *********** (talvez nem precise)
-- signup if you don't have an account
-- create an application
touch .env
-- set content in .env (remember to mention .gitignore)
-- require dotenv config()
-- OAuth:
  -- redirect to meliObject.getAuthURL(redirect_uri) (https://auth.mercadolibre.com.ar/authorization?response_type=code&client_id=APP_ID)
  -- mercadolibre will redirect back to redirect_uri (with ?code=CODE_TO_GENERATE_TOKEN)
  -- get token by calling Meli.authorize(code, redirect_uri, callback) (https://api.mercadolibre.com/oauth/token?grant_type=authorization_code&client_id=APP_ID&client_secret=SECRET_KEY&code=SERVER_GENERATED_AUTHORIZATION_CODE&redirect_uri=REDIRECT_URI)
  mkdir middlewares && touch middlewares/tokens.js
  -- set content in tokens.js
  -- "save" info (access_token / "expires")
mkdir utils && touch utils/index.js
-- set content in utils/index.js -> promisify meliObject.get()
-- meliObject.get()
  -- user, categories, currencies, etc.
touch views/home.ejs
-- set HTML content in views/home.ejs
-- meliObject.post()
  -- items
-- meliObject.get(path, [params,] callback)
  -- items, orders, messages?
-- notifications
  -- set up app.get('/notifications')
  -- save it on firebase? (realtime database)

-- deploy to heroku
  node --version
  -- set script 'engines' in package.json
  -- install heroku
  touch .gitignore
  -- set content in .gitignore (https://gitignore.io/api/node,macos,visualstudiocode)
  heroku local web
  -- * Ctrl + C * --
  git init
  git add .
  git commit -m "creating my first mercadolibre application"
  heroku login
  heroku create
  git push heroku master
  heroku open


